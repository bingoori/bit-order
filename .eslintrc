{
	"extends": [
		"prettier",
		"eslint:recommended",
		"eslint-config-prettier",
		"plugin:react/recommended"
	],
	"env": {
		"es6": true,
		"node": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"react/react-in-jsx-scope": "off",
		"max-len": [1,1200,2,{"ignoreComments": true}],
		"no-console":[1],
		"no-unused-vars":[1],
		"react/jsx-uses-vars": [2],
		"no-loop-func":[1],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": ["error", "single", { "avoidEscape": true }],
		"semi": ["error", "never"],
		"no-undef": 0,
		"no-unused-expressions": 0
	}
}